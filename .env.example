# Environment Configuration
NODE_ENV=development

# Vite Dev Server URL (for Electron development mode)
VITE_DEV_SERVER_URL=http://localhost:3001

# Steam Workshop API
STEAM_API_KEY=your_steam_api_key_here
STEAM_APP_ID=1949770

# Local Workshop Data Path
# This is where your downloaded Workshop mod folders are stored
# Each mod should be in a folder named with its Steam Workshop ID
# Example for Windows: E:\Games\Escape from Duckov\Workshop
# Example for Linux/Mac: /home/user/games/duckov/workshop
WORKSHOP_DATA_PATH=E:\path\to\your\workshop\folder

# DeepL Translation API
DEEPL_API_KEY=your_deepl_api_key_here
DEEPL_API_URL=https://api-free.deepl.com/v2/translate

# Database
DB_PATH=./data/mods.db

# Cache Settings
CACHE_TTL_HOURS=24
TRANSLATION_CACHE_TTL_DAYS=7

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

